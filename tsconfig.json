{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "module": "commonjs",
        "newLine": "lf",
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "pretty": true,
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "stripInternal": true,
        "noImplicitAny": false,
        "target": "ES2018"
    },
    "exclude": ["app/public", "app/views", "dist", "node_modules*", "test", "**/*.d.ts", "**/*.spec.ts"]
}
